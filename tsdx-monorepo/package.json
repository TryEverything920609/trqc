  "devDependencies": {
    "@changesets/changelog-github": "^0.2.8",
    "@changesets/cli": "^2.13.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "cypress": "^6.3.0",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "tsdx": "^0.14.1",
    "typescript": "^4.1.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.11.1",
    "**/@typescript-eslint/parser": "^4.11.1",
    "**/jest": "^26.6.3",
